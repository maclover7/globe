<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">
      <h1>New Teacher</h1>
    </div>
  </div>
  <div class="panel-body">
    <form class="new_teacher" {{ action "teacherRegister" on="submit" }}>
      <div class="form-group">
        <label for="user_name">Name</label>
        {{ input class="form-control" autofocus=autofocus type=text value=name }}
      </div>

      <div class="form-group">
        <label for="user_email">Email</label>
        {{ input class="form-control" autofocus=autofocus type=email value=email }}
      </div>

      <div class="form-group">
        <label for="user_password">Password</label>
        {{ input class="form-control" autofocus=autofocus type="password" value=password }}
      </div>

      <div class="form-group">
        {{input class="btn btn-primary" type="submit" value="Log In"}}
      </div>
    </form>
  </div>
</div>
