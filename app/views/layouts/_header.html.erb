<nav class="navbar navbar-static-top navbar-default" role="navigation">
  <div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to root_path, class: "navbar-brand" do %>
        <span class="glyphicon glyphicon-globe"></span> Globe
      <% end %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse navbar-ex1-collapse">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <% if user_signed_in? %>
          <% if current_user.courses.where("courses.name IS NOT NULL").any? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">My Courses <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <% current_user.courses.each do |course| %>
                    <li> <%= link_to course.name, course_path(course) %> </li>
                  <% end %>
                </ul>
              </li>
            <% end %>

          <% if student_signed_in? %>
            <li> <%= link_to "Account Settings", edit_student_registration_path %> </li>
            <li> <%= link_to "Log out", destroy_user_session_path, method: :delete %> </li>
          <% elsif teacher_signed_in? %>
            <li> <%= link_to "Account Settings", edit_teacher_registration_path %> </li>
            <li> <%= link_to "Log out", destroy_user_session_path, method: :delete %> </li>
          <% end %>
        <% else %>
          <li><%= link_to "Sign in", new_user_session_path %></li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container -->
</nav>
