<button type="button" class="btn btn-primary btn-lg" id="new-course-notification-toggler" data-toggle="modal" data-target="#newCourseNotification">
  <span class="glyphicon glyphicon-plus"></span> New Course Notification
</button>

<div class="modal fade" id="newCourseNotification" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">New Course Notification</h4>
      </div>
      <div class="modal-body">

        <%= form_tag course_notifications_path(@course), id: "new-course-notification-form" do %>
          <input type="hidden" name="course_notification[course_id]" value="<%= @course.id %>" id="course_notification_course_id" class="new-course-notification-course_id">
          <div class="form-group">
           <%= label_tag "subject" %>
            <%= text_field_tag "course_notification[subject]", nil, placeholder: "abc123", class: "form-control new-course-notification-subject" %>
          </div>
          <div class="form-group">
            <%= label_tag "body" %> <br>
            <input class="form-control new-course-notification-body" id="course_notification[body]" value="" placeholder="" type="hidden" name="course_notification[body]">
            <trix-editor class="trix-content" input="course_notification[body]"></trix-editor>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= button_tag "Submit", type:"submit", class: "btn btn-primary new-course-notification-btn popup-submit" %>
      </div>
        <% end %>

    </div>
  </div>
</div>
