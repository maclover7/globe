<h1>My Courses</h1>

<hr>

<div class="row">
  <% @courses.each do |course| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <div class="caption">
          <h3> <%= course.name %> </h3>
          <p> <%= course.code %> </p>
          <p> <%= course.description %> </p>
          <p>
          <%= link_to 'Show', course , class: 'btn btn-primary', role: 'button' %>
            <%= link_to 'Edit', edit_course_path(course), class: 'btn btn-default', role: 'button' %>
            <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br>

<%= link_to 'New Course', new_course_path, class: 'btn btn-lg btn-primary' %>
