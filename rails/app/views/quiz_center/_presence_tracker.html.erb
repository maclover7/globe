<script>
  pusher = new Pusher("<%= ENV['PUSHER_APP_KEY'] %>", {
    authEndpoint: '/pusher/auth',
    auth: {
      headers: { 'X-CSRF-Token': '<%= form_authenticity_token %>' }
    },
    encrypted: true
  });

  var presenceChannel = pusher.subscribe('presence-' + "<%= ENV['RAILS_ENV'] || ENV['RACK_ENV'] %>" + "-" + "<%= @assignment.id %>");
</script>
